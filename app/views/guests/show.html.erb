<h1>Guest Name: <%= @guest.name %></h1>

<div id="rooms_list">
  <h2>Rooms: </h2>
  <% @guest.rooms.each do |room| %>
  <ul>
    <li>Suite: <%= room.suite %></li>
    <li>Rate: <%= room.rate %></li>
    <li>Hotel Name: <%= room.hotel.name %></li>
  </ul>
  <% end %>
</div>

<div id="add_room_form">
  <%= form_with url: "/guests/#{@guest.id}/guest_rooms", method: :post, data: {turbo: false} do |form| %>
    <%= form.label :room_id, "Room ID" %>
    <%= form.number_field :room_id %>
    <%= form.submit "Submit" %>
  <% end %>
</div>